[run]
concurrency = multiprocessing
include =
  */buildstream/*

omit =
  # Omit profiling helper module
  */buildstream/_profile.py
  # Omit generated code
  */buildstream/*_pb2.py
  */buildstream/*_pb2_grpc.py
  */.eggs/*

[report]
show_missing = True
precision = 2

[paths]
source =
    buildstream/
    */site-packages/buildstream/
    */buildstream/buildstream/
