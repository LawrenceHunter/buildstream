[run]
concurrency = multiprocessing
include =
  */buildstream2/*

omit =
  # Omit some internals
  */buildstream2/_profile.py
  */buildstream2/__main__.py
  */buildstream2/_version.py
  # Omit generated code
  */buildstream2/_protos/*
  */.eggs/*
  # Omit .tox directory
  */.tox/*

[report]
show_missing = True
precision = 2

[paths]
source =
    buildstream2/
    */site-packages/buildstream2/
    */buildstream/buildstream2/
